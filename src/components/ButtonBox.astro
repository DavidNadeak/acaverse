---
const { url, text, textColor, backgroundColor } = Astro.props;
---

<div class="ButtonBox">
  <a href={url}>{text}</a>
</div>

<style define:vars={{ textColor, backgroundColor }}>
  .ButtonBox {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 70px;
    font-size: 20px;
    font-weight: 900;
    border-radius: 10px;
    background-color: var(--backgroundColor);
  }

  .ButtonBox:hover {
    opacity: 0.9;
  }

  a {
    text-decoration: none;
    color: var(--textColor);
  }
</style>
