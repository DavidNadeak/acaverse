---
const { url, src, text } = Astro.props;
---

<div class="ButtonRound">
  <div class="link-button">
    <a href={url}><img src={src} alt={text} width="40" /></a>
  </div>
  <p>{text}</p>
</div>

<style>
  .ButtonRound {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .link-button {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 60px;
    height: 60px;
    padding: 3px;
    border-radius: 50px;
    background: linear-gradient(145deg, #ffffff, #dddddd);
    box-shadow: 5px 5px 5px #d9d9d9;
  }

  .link-button:hover {
    border-radius: 50px;
    background: linear-gradient(145deg, #dddddd, #ffffff);
  }

  a {
    display: flex;
    align-items: center;
  }

  p {
    font-size: 12px;
    font-weight: bold;
    text-align: center;
    color: #5133ab;
  }
</style>
