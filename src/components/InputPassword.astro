---
const { name, icon, placeholder, textColor, backgroundColor } = Astro.props;
---

<div class="Input">
  <img src={icon} alt="Student ID" class="input-icon" />
  <input
    type="password"
    name={name}
    class="password"
    placeholder={placeholder}
    required
  />
  <img
    src="/icons/show_password.svg"
    alt="Show Password"
    class="show-icon"
    id="show-icon"
  />
</div>

<style define:vars={{ icon, textColor, backgroundColor }}>
  .Input {
    display: flex;
    align-items: center;
    width: 100%;
    height: 60px;
    border: 1px solid var(--textColor);
    border-radius: 10px;
  }

  .input-icon {
    width: 20px;
    margin: 10px;
  }

  input {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 80%;
    margin: 10px;
    font-size: 20px;
    border: none;
    color: var(--textColor);
    background-color: var(--backgroundColor);
  }

  input:focus {
    outline: none;
  }

  .show-icon {
    width: 20px;
    margin: 10px;
    cursor: pointer;
  }
</style>
