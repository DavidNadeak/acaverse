<style>
  .NavBar {
    position: sticky;
    bottom: 5px;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    width: 98.5%;
    height: 65px;
    border-radius: 10px;
    border: 3px solid #5c9dff;
    background-color: #5133ab;
  }

  .nav-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 20%;
    height: 90%;
    padding-top: 10px;
    font-size: 10px;
    font-weight: bold;
    text-decoration: none;
    color: white;
  }

  .nav-link.active {
    color: aqua;
  }

  .nav-link.active svg path {
    fill: aqua;
  }

  svg {
    width: 35px;
    height: 35px;
  }

  .text {
    margin-top: 0px;
  }
</style>

<script>
  const nav = document.querySelectorAll(".nav-link");
  const currentURL = window.location.href;

  nav.forEach((link) => {
    if (link.href === currentURL) {
      link.classList.add("active");
    }
  });
</script>
