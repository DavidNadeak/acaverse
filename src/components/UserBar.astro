---
const { user, textColor, profilePicture } = Astro.props;
---

<div class="UserBar">
  <h2>Hello, <span>{user}</span></h2>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="100"
    height="100"
    viewBox="0 0 512 512"
    class="notifikasi"
    ><path
      fill="currentColor"
      d="M440.08 341.31c-1.66-2-3.29-4-4.89-5.93c-22-26.61-35.31-42.67-35.31-118c0-39-9.33-71-27.72-95c-13.56-17.73-31.89-31.18-56.05-41.12a3 3 0 0 1-.82-.67C306.6 51.49 282.82 32 256 32s-50.59 19.49-59.28 48.56a3.13 3.13 0 0 1-.81.65c-56.38 23.21-83.78 67.74-83.78 136.14c0 75.36-13.29 91.42-35.31 118c-1.6 1.93-3.23 3.89-4.89 5.93a35.16 35.16 0 0 0-4.65 37.62c6.17 13 19.32 21.07 34.33 21.07H410.5c14.94 0 28-8.06 34.19-21a35.17 35.17 0 0 0-4.61-37.66ZM256 480a80.06 80.06 0 0 0 70.44-42.13a4 4 0 0 0-3.54-5.87H189.12a4 4 0 0 0-3.55 5.87A80.06 80.06 0 0 0 256 480Z"
    ></path></svg
  >
  <img src={profilePicture} alt="User" class="user" />
</div>

<style define:vars={{ textColor }}>
  .UserBar {
    position: sticky;
    top: 10px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 99%;
    height: 65px;
    margin-bottom: 40px;
    border-radius: 10px;
    border: 3px solid black;
    background-color: #f5f5f5;
  }

  h2 {
    margin-left: 15px;
  }

  span {
    color: var(--textColor);
  }

  .notifikasi {
    width: 25px;
    height: 25px;
    margin-left: 60px;
  }

  .notifikasi path {
    fill: #858585;
  }

  .notifikasi path:hover {
    fill: #5133ab;
  }

  .user {
    width: 45px;
    height: 45px;
    margin-right: 15px;
    border: 3px solid black;
    border-radius: 35px;
    background-color: var(--textColor);
  }
</style>
