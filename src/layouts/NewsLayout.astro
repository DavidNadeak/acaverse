---
import ButtonBack from "../components/ButtonBack.astro";
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <div class="NewsLayout">
    <ButtonBack />

    <div class="details">
      <p class="publish-date">Date: {frontmatter.publish_date.slice(0, 10)}</p>

      <p class="author">Author: {frontmatter.author}</p>

      <div class="tags-container">
        {
          frontmatter.tags.map((tag) => (
            <a href={`/tags/${tag}`} class="tags">
              #{tag}
            </a>
          ))
        }
      </div>

      <img src={frontmatter.image.url} alt={frontmatter.image.alt} />
    </div>

    <slot />
  </div>
</Layout>

<style>
  * {
    border: 1px solid black;
  }

  .NewsLayout {
    width: 90%;
    margin-top: 15px;
  }

  .details {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .publish-date {
    margin-bottom: 0px;
  }

  img {
    width: 100%;
    margin-top: 20px;
    border-radius: 10px;
  }

  .tags {
    margin-right: 5px;
    padding: 5px;
    text-decoration: none;
    border-radius: 5px;
    color: white;
    background-color: #5133ab;
  }

  .tags:hover {
    color: white;
    background-color: black;
  }
</style>
